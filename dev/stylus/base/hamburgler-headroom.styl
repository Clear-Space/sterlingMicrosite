
// Hamburgler Stuff


.mobilenav {
    background $primaryColour
    position fixed
    right -35%
    overflow hidden
    top 0
    transition 0.5s all ease-in-out
    height 120vh
    width 35%
    z-index 999999

}

.extended {
  
    background $lightBlue
    position fixed
    right 0
    height 120vh
    width 30%
    top 0
  
}


* {   -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-tap-highlight-color: transparent; /* For some Androids */
}

.top-animate {
    background: #fff !important;
    top: 13px !important;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.mid-animate {
    opacity: 0;
}
.bottom-animate {
    background: #fff !important;
    top: 13px !important;
    -webkit-transform: rotate(-225deg);
    transform: rotate(-225deg);
}
.top-menu {
    top: 3px;
    width: 50px;
    height: 5px;
    border-radius: 10px;
    background-color: #F9A530;
}
.mid-menu {
    top: 15px;
    width: 50px;
    height: 5px;
    border-radius: 10px;
    background-color: #F9A530;
}
.bottom-menu {
    top: 27px;
    width: 50px;
    height: 5px;
    border-radius: 10px;
    background-color: #F9A530;
}
.menui {
    background: #fff;
    transition: 0.6s ease;
    transition-timing-function: cubic-bezier(.75, 0, .29, 1.01);
    margin-top: 10px;
    position: absolute;
}


.icon {
    z-index: 999999999999;
    position: fixed;
    display: block;
    padding: 9px;
    height: 32px;
    width:32px;
    margin: 0px;
    top: 35px;
    right 7.5%
}

