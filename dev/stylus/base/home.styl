.headerHome
    height 100vh
    background-image url('http://fillmurray.com/1400/900');
    background-size cover
    background-repeat no-repeat
    
    h1
        margin-top 0
        
    h2  
        padding-top 60vh
        font-size 56px
        color white
        text-align center
        width 100%  
        margin 0  


header
    .navBar
        height 120px
        background $primaryColour
        width 85%
        padding-left 7.5%
        padding-right 7.5%
        
        
        .logoImage
            width 120px
            height 80px
            background white
            position relative
            float left
            margin-top 20px
            
        h1 
            width 30%
            margin-top 50px
            float left 
            margin-left 60px
            position relative
            font-size 20px
            
    .arrowIcon
        text-align center
        color white 
        font-size 200px       
               
    .triangleBorder
        height 20px
        position absolute
        top 120px
        width 100%
        left 0
        background-image url('../img/sterlingTriangle.svg');

.section_1_image, .section_2_image, .section_3_image
    margin-top 50px
    margin-bottom 50px

.section_1, .section_2, .section_3
    padding-bottom 120px
    .sectionInterior
        h2
            font-size 42px
            padding-bottom 0
            padding-top 0
            margin-top 0
            margin-bottom 5px

.section_1
    background #fff
    

.section_1_image
    background-image url('http://fillmurray.com/800/800');
    background-position center
    background-size cover; 
    height 450px
    width 100% 
    border-bottom 1px solid $grey
    position relative
    h3
        position absolute
        font-size 35px;
        top 15%
        width 42%
        float right
        margin-left 58%
        
.section_1_p, .section_2_p, .section_3_p
    font-size 22px
    line-height 1.4
    padding-bottom 85px
            
    
.section_2 
    background #4EB4DB          

.section_2_image
    background-image url('http://fillmurray.com/800/800');
    background-position center
    background-size cover; 
    height 450px
    width 100% 
    border-bottom 1px solid $grey
    position relative


.section_3
    background #fff 

.section_3_image
    background-image url('http://fillmurray.com/800/800');
    background-position center
    background-size cover; 
    height 450px
    width 100% 
    border-bottom 1px solid $grey
    position relative
    
 
        
.section_1, .section_2, .section_3
    padding-top 5vh
    h2
        text-align center

.miniBlock
    width 55%
    position absolute
    
    h2
        font-size 55px
        width 70%
        margin-bottom 10px
    
    .button
        float left  
        
.mini_2
    .miniBlock
        margin-left 35%          
.miniSection
    padding-top 5vh
    padding-bottom 5vh
    
    .sectionInterior
    
        h2
            margin-top 0
            text-align left
        
    

    
    h2
        text-align center

.mini_1
    background #6ABFBB

.mini_2 
    background-image url("http://fillmurray.com/1200/800");
    background-size cover
    background-repeat no-repeat
    background-position center
    
    .sectionInterior
        
        h2
            
    
.mini_3
    background-image url("http://fillmurray.com/1500/800");
    background-size cover
