

// footer

footer 
    background #2A3766;
    height 15vh
    padding-top 35px
    float left
    width 90%
    padding-left 10%
    ul
        margin 0
        text-decoration none
        display inline
        float left
        width 35%
        padding-left 0
        
        li
            display inline
            color white
            a
                color white
                text-decoration none 
            
    .footerRight
        width 30%
        padding-left 15%
        float right
        text-align right
        li 
            float left  
            text-align right  
            padding-left 20px
            color white
            a
                color white   

    
    .footerLeft
        width 50%
        li 
            padding-right 20px
            
@media (max-width: 1195)
    footer
        .footerRight
            width 100%
            
        .footerLeft
            width 100%                
   

