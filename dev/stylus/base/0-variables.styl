.headroom {
    transition: transform 200ms linear;
    position fixed
    z-index 9999999
    width 100%
    background none
    height 90px
    transition 0.25s all ease-in-out
}
.headroom--pinned {
    transform: translateY(0%);
    position fixed
    top 0
}
.headroom--unpinned {
    transform: translateY(-150%);
}

.headroom--not-top
    background rgba(0,0,0, 0.5)
    z-index 3
.headroom--unpinned {
